{
  "name": "klg-koa-starter-kit",
  "version": "2.0.0",
  "description": "考拉后端项目模板",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "scripts": {
    "doc": "apidoc -i src/ -o assets/docs",
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "build": "tsc -d -p ./",
    "dev": "NODE_ENV=dev ts-node src/main.ts",
    "start": "ts-node -T src/main.ts",
    "cov": "nyc npm test",
    "test": "NODE_ENV=test mocha -t 5000 -r ts-node/register test/**/*.spec.ts",
    "pretest": "npm run lint"
  },
  "nyc": {
    "extensions": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaolalicai/klg-koa-starter-kit"
  },
  "keywords": [
    "klg"
  ],
  "author": "dev",
  "license": "MIT",
  "engines": {
    "node": ">=8.9.0"
  },
  "dependencies": {
    "@akajs/ioc": "^0.6.5",
    "@akajs/web": "^0.6.6",
    "@akajs/mongoose": "^0.6.5",
    "@akajs/utils": "^0.6.5",
    "config": "^3.3.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.6",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.7",
    "@types/supertest": "^2.0.8",
    "apidoc": "^0.20.1",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "nyc": "^15.0.0",
    "source-map-support": "^0.5.16",
    "supertest": "^4.0.2",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "tslint-config-klg": "^2.0.0",
    "typescript": "^3.8.3",
    "webstorm-disable-index": "^1.2.0"
  }
}
