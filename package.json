{
  "name": "klg-koa-starter-kit",
  "version": "2.0.0",
  "description": "考拉后端项目模板",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "scripts": {
    "doc": "apidoc -i src/ -o assets/docs",
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "build": "tsc -d -p ./",
    "dev": "NODE_ENV=dev ts-node src/main.ts",
    "start": "node dist/main.js",
    "prestart": "npm run build",
    "cov": "nyc npm test",
    "test": "NODE_ENV=test mocha -t 5000 -r ts-node/register test/**/*.spec.ts",
    "pretest": "npm run lint"
  },
  "nyc": {
    "extensions": [
      ".ts"
    ],
    "include": [
      "src/**/!(*.spec.*).ts"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaolalicai/klg-koa-starter-kit"
  },
  "keywords": [
    "klg"
  ],
  "author": "dev",
  "license": "MIT",
  "engines": {
    "node": ">=8.9.0"
  },
  "dependencies": {
    "@akajs/core": "0.0.8",
    "@akajs/crud": "0.0.8",
    "@akajs/mongoose": "0.0.8",
    "@akajs/utils": "0.0.8",
    "config": "^1.31.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.5",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.144",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.21",
    "@types/supertest": "^2.0.8",
    "apidoc": "^0.17.7",
    "mocha": "^5.2.0",
    "nock": "^9.6.1",
    "nyc": "^12.0.2",
    "source-map-support": "^0.5.13",
    "supertest": "^3.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.20.0",
    "tslint-config-klg": "^1.0.4",
    "typescript": "^3.6.4",
    "webstorm-disable-index": "^1.2.0"
  }
}
